<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <Button
        android:id="@+id/choice_pierre"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="8dp"
        android:text="Pierre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/choice_papier"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="3dp"
        android:text="Papier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/choice_ciseaux"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@+id/choice_pierre" />

    <Button
        android:id="@+id/choice_ciseaux"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="16dp"
        android:text="Ciseaux"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>